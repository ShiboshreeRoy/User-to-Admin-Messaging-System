<script>
   const images = [
       "https://i.ibb.co.com/JW2FtsQW/win-fast.png",
       "https://i.ibb.co.com/Gf5p98J0/win-one.png",
       "https://i.ibb.co.com/N6KR5tNt/win-two.png",
       "https://i.ibb.co.com/5hNcsDk3/Eid-Offer.png"
   ];
   
   let currentIndex = 0;
   const slider = document.getElementById("slider");
   
   function changeImage() {
       slider.style.opacity = 0;
       setTimeout(() => {
           slider.src = images[currentIndex];
           slider.style.opacity = 1;
           currentIndex = (currentIndex + 1) % images.length;
       }, 500);
   }
   
   slider.src = images[currentIndex];
   setInterval(changeImage, 6000);
</script>
<div class="bg-gradient-to-b from-gray-900 to-gray-800 py-12">
  <div class="container mx-auto px-6">
    <!-- Title -->
    <h2 class="text-3xl font-bold text-white text-center mb-8 uppercase tracking-wide">CASINO GAMES</h2>
    
    <!-- Game Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <% @casinogames.each do |casinogame| %>
        <div class="bg-gray-800 rounded-2xl shadow-lg overflow-hidden group relative transform transition-transform duration-300 hover:scale-105 hover:shadow-2xl">
          <!-- Game Image -->
          <% if casinogame.image.attached? %>
            <%= image_tag casinogame.image, class: "w-full h-56 object-cover" %>
            <!-- Play Button Overlay -->
            <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <button class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-bold py-3 px-8 rounded-full shadow-lg hover:from-yellow-600 hover:to-orange-600 transition-transform duration-200 transform hover:scale-110">
                Play Now
              </button>
            </div>
          <% else %>
            <div class="w-full h-56 bg-gray-700 flex items-center justify-center">
              <span class="text-gray-400 text-sm font-medium">No image available</span>
            </div>
          <% end %>

          <!-- Game Details -->
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white truncate">
              <%= casinogame.title %>
            </h3>
            <p class="text-gray-400 text-sm mt-3 line-clamp-2">
              <%= casinogame.description %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white w-full max-w-sm rounded-lg shadow-lg mx-4 sm:mx-0">
        <div class="bg-blue-600 text-white text-center py-4 rounded-t-lg relative">
            <h2 class="text-xl font-semibold">Login</h2>
            <%= link_to "/", class: "absolute top-4 right-4 text-white", data: { turbo: false } do %>
              <i class="fas fa-times"></i>
            <% end %>

        </div>
        <div class="p-6">
            <div class="flex justify-center mb-6">
                <img alt="Royel winner signup logo" height="50" src="https://i.ibb.co.com/CspDT4q1/Royel-Winner.png" width="150" style="border-radious:15px;"/>
            </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email , class: "block text-gray-700 text-sm font-bold mb-2"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :password , class: "block text-gray-700 text-sm font-bold mb-2"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full bg-green-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

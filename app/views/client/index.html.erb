<div class=" text-white">
  <div class="bg-gray-900 max-w-md mx-auto overflow-hidden mt-11">
    <!-- Header -->
    <div class="bg-red-900 p-4 mt-5 text-white text-center relative">
      <h1 class="text-xl font-semibold">Personal Info</h1>
      <%= link_to "/", class: "absolute top-4 right-4 text-white hover:text-gray-300 transition duration-300" do %>
          <i class="fas fa-times"></i>
      <% end %>

    </div>

    <!-- Avatar Section -->
    <div class="relative h-32 bg-gradient-to-b from-blue-900 to-black">
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="bg-white rounded-full p-2">
          <img alt="User avatar" class="rounded-full" height="100" src="https://storage.googleapis.com/a1aa/image/_r8EA64QqPG5385-Spz23YlDp2q_f8Qz0rSYEuH2zfk.jpg" width="100"/>
        </div>
      </div>
    </div>

    <!-- User Info -->
    <div class=" text-center mt-12">
      <h2 class="text-lg font-semibold text-white">
        <% if user_signed_in? %>
          <%= current_user.email.split('@').first.capitalize %>
        <% end %>
        <span class="bg-gray-700 text-gray-300 text-xs px-2 py-1 rounded">Bronze</span>
      </h2>
      <p class="text-gray-400">Date Registered: <%= current_user.created_at.strftime("%B %d, %Y") %></p>
    </div>

    <!-- Gift Points -->
    <div class="flex justify-between items-center bg-gray-800 p-4 mt-4">
      <div>
        <p class="text-gray-400">Gift Points</p>
        <p class="text-yellow-500 text-xl font-semibold"><%= @points %></p>
      </div>
      <div class="flex items-center">
        <p class="text-gray-400 mr-2">My Gift Points</p>
        <i class="fas fa-chevron-right text-gray-400"></i>
      </div>
    </div>

    <!-- Personal Info Section -->
    <div class="p-4 bg-gray-800 rounded-lg mt-4">
      <div class="flex items-center mb-4">
        <i class="fas fa-user text-yellow-500 mr-2"></i>
        <div>
          <p class="text-gray-400">Full Name</p>
          <p class="text-white">
            <% if user_signed_in? %>
              <%= current_user.email.split('@').first.capitalize %>
            <% end %>
          </p>
        </div>
      </div>
      <div class="flex items-center mb-4">
        <i class="fas fa-birthday-cake text-yellow-500 mr-2"></i>
        <div>
          <p class="text-gray-400">Birthday</p>
          <p class="text-white">
            <% if @dob %>
              <%= @dob %>
            <% else %>
              No Date of Birth available.
            <% end %>
          </p>
        </div>
      </div>
      <div class="flex items-center mb-4">
        <i class="fas fa-phone text-yellow-500 mr-2"></i>
        <div class="flex-1">
          <p class="text-gray-400">Phone Number</p>
          <div class="flex items-center">
            <p class="text-white mr-2">
              <% if user_signed_in? %>
                +88<%= current_user.phone_number %>
              <% end %>
            </p>
            <span class="bg-gray-700 text-gray-300 text-xs px-2 py-1 rounded">Default</span>
            <span class="text-green-500 ml-2">Verified</span>
          </div>
        </div>
      </div>
      <div class="flex items-center mb-4">
        <i class="fas fa-envelope text-yellow-500 mr-2"></i>
        <div class="flex-1">
          <p class="text-gray-400">Email Address</p>
          <div class="flex items-center">
            <p class="text-white mr-2">
              <% if user_signed_in? %>
                <%= current_user.email %>
              <% end %>
            </p>
            <span class="bg-gray-700 text-gray-300 text-xs px-2 py-1 rounded">Default</span>
            <span class="text-green-500 ml-2">Verified</span>
          </div>
        </div>
      </div>
      <div class="flex items-center">
        <%= link_to edit_user_registration_path, class: "flex items-center bg-gradient-to-r from-green-500 to-green-700 text-white rounded p-2 hover:from-green-600 hover:to-green-800 transition duration-300" do %>
          <i class="fas fa-plus mr-2"></i>
          <span class="font-bold">Add</span>
        <% end %>
      </div>
    </div>
  </div>
</div>